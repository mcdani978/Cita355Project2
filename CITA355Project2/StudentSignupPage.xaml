<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CITA355Project2.StudentSignupPage"
             Title="">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Student Information" FontSize="40" HorizontalOptions="Center" 
               FontAttributes="Bold"/>

        <Entry x:Name="StudentIDEntry" Placeholder="StudentID" />
        <Entry x:Name="firstNameEntry" Placeholder="First Name" />
        <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="EmailEntry" Placeholder="Email"/>

        <Button Text="Submit" Clicked="OnSubmitClicked" />
    </VerticalStackLayout>
</ContentPage>